<Window x:Class="Banyato.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banyato"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Megnyitás" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="gridTo" Grid.Row="1" Grid.Column="0"/>
        <Label x:Name="labelMeret" Grid.Column="1" Grid.Row="1" Height="30" VerticalAlignment="Top"/>
        <Label x:Name="labelAtlag" Grid.Column="1" Grid.Row="1" Height="30" Margin="0,40,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
